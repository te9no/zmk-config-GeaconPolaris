#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>
#include <behaviors/rgbled_widget.dtsi>

/ {
	chosen {
		zmk,physical-layout = &layout_Polaris;
      zmk,battery = &vbatt;
	};
   
	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <12>;
		rows = <6>;
		
		map = <
		RC( 0, 5)  RC( 1, 5)  RC( 2, 5)  RC( 3, 5)  RC( 4, 5)  RC( 5, 2)     RC( 0, 7)  RC( 0, 11)  RC( 1, 11)  RC( 2, 11)  RC( 3, 11)  RC( 4, 11)  
		RC( 0, 4)  RC( 1, 4)  RC( 2, 4)  RC( 3, 4)  RC( 5, 4)  RC( 0, 1)     RC( 2, 7)  RC( 0, 10)  RC( 1, 10)  RC( 2, 10)  RC( 3, 10)  RC( 5, 10)  
		RC( 0, 3)  RC( 1, 3)  RC( 2, 3)  RC( 4, 3)  RC( 5, 3)  RC( 2, 1)                RC( 3, 7)  RC( 1, 9)  RC( 2, 9)  RC( 4, 9)  RC( 5, 9)  
